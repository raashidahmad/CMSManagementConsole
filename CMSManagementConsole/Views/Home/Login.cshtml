@model CMSManagementConsole.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="row">
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <h1 class="text-center login-title">Enter your Login Information</h1>
                <div class="account-wall">
                    <img class="profile-img" width="96" height="96" src="~/Content/img/user.png" alt="User Icon">
                    @Html.AntiForgeryToken()
                    @{
                        if (ViewBag.loginFailed != "")
                            {
                            <span class="text-danger">@ViewBag.loginFailed</span>
                            }
                    }
                    @Html.ValidationSummary("", new { @class = "txt-danger" })
                    @{
                        using (@Html.BeginForm("login", "Home", FormMethod.Post, new { @class = "form-signin" }))
                            {
                            @Html.TextBoxFor(m => m.Username, new { Value = "RashidAhmad", @class = "form-control" })
                            @Html.PasswordFor(m => m.Password, new { placeholder = "Password", Value = "MySuperP@ss!", @class = "form-control" })
                            <input type="submit" class="btn btn-primary btn-lg btn-block" value="Login" />
                            <label class="checkbox pull-left">
                                <input type="checkbox" value="remember-me">
                                Remember me
                            </label>
                            <a href="#" class="pull-right need-help">Need help?</a><span class="clearfix"></span>
                            }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
